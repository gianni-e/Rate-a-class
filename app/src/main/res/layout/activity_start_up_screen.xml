<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startUpScreen">

    <Button
        android:id="@+id/viewCourse"
        android:layout_width="150"
        android:layout_height="45"
        android:layout_marginStart="130dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="273dp"
        android:background="@drawable/border"
        android:text="@string/view_courses"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rateCourse" />

    <Button
        android:id="@+id/rateCourse"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/border"
        android:text="@string/rate_course"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/viewCourse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>