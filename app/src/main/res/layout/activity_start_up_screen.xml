<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C2E45"
    tools:context=".startUpScreen">

    <Button
        android:id="@+id/viewCourse"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="273dp"
        android:background="@drawable/border"
        android:text="@string/view_courses"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rateCourse" />

    <Button
        android:id="@+id/rateCourse"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/border"
        android:text="@string/rate_course"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/viewCourse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="426dp"
        android:layout_height="42dp"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="173dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toTopOf="@+id/rateCourse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/headerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="monospace"
        android:text="@string/rate_a_class_header"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rateCourse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>